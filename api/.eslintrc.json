{  
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "plugin:security/recommended"
  ],
  "ignorePatterns": ["test/*.ts"],
  "rules": {
    "newline-per-chained-call": "error"
  }
}
